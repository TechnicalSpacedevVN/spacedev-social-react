{
  "editor.formatOnSave": true,
  "editor.wordWrapColumn": 80,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  "files.exclude": {
    "**/*.map": true
  },
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "prettier.printWidth": 80,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.bracketSpacing": true,
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    "styled`([^`]*)", // styled`...`
    "classList.add([^",
    // ["ClassName \\=([^;]*);", "'([^']*)'"],
    // ["ClassName \\=([^;]*);", "\"([^\"]*)\""],
    // ["ClassName \\=([^;]*);", "\\`([^\\`]*)\\`"],
    // ["classList.add\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    // ["classList.remove\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["classNames\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["ClassNames\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["clsx\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],

    ["classList\\.add\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.contains\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.entries\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.forEach\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.item\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.keys\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.length\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.remove\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.replace\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.supports\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.toggle\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.value\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["classList\\.values\\(([^)]*)", "['\"`]([^'\"`\\s]*)['\"`]"],
    ["className\\s*=\\s*['\"`]([^'\"`]*)['\"`]"],
    ["className\\s*:\\s*['\"`]([^'\"`]*)['\"`]"],
    ["useClassNames\\s*=\\s*['\"`]([^'\"`]*)['\"`]"]
  ],
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "ngClass",
    ".*ClassName",
    ".*ClassNames",
    ".*Class",
    ".*Styles*"
  ]
}
